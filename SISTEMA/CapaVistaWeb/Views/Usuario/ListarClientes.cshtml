<div class="container">
    <h2 style="text-align: center">CLIENTES</h2>
    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" th:href="@*@{productoAsc}*@#"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" th:href="@*@{productoDesc}*@#"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="/Usuario/ListarClientes" method="POST" id="bCliente">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="dato" aria-label="Search">
        <button onclick="return Buscar('bCliente')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
    @*<h2>@ViewBag.Mensaje</h2>
        <h2>@ViewBag.Lista</h2>*@
    <!-- Listar -->
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    CLIENTE
                </th>
                <th>
                    DNI
                </th>
                <th>
                    TELEFONO
                </th>
                <th>
                    DIRECCION
                </th>
                <th>
                    CORREO
                </th>
                <th>
                    USERNAME
                </th>
                <th>
                    DISTRITO
                </th>
                <th>
                    ROL
                </th>
                <th>
                    DESHABILITAR
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RazonSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubigeo.Distrito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roll.Descripcion)
                    </td>
                    <td>
                        <a onclick="return Deshabilitar(this)" href="/Usuario/DeshabilitarCliente?idC=@item.IdUsuario" class="btn btn-danger" type="button"><i class="bi bi-toggle2-off"></i></a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
