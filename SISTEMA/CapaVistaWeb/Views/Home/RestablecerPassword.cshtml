<div class="login-container">
    <h3>Reestablecer la contraseña</h3>
    <form method="post" id="idLogin" action="/Home/RestablecerPassword" class="row g-2 needs-validation" novalidate>
        @if (TempData["TipoAlerta"] == null || TempData["TipoAlerta"].ToString().ToUpper() == "warning".ToUpper())
        {
            <div>
                <label for="validationCustom01" class="form-label">Correo con el que se registro</label>
                <input type="text" id="validationCustom01" name="correo" placeholder="Ingrese su correo" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor ingrese su correo.
                </div>
            </div>
        }
        @if (TempData["TipoAlerta"] != null)
        {
            <div class="alert alert-@TempData["TipoAlerta"]">
                @TempData["ContenidoAlerta"]
            </div>
        }
        <!--Mostrar solo cuando el correo fue enviado con exito-->
        @if (TempData["TipoAlerta"] != null && TempData["TipoAlerta"].ToString() == "success")
        {
            <div>
                <label for="validationCustom02" class="form-label">Codigo</label>
                <input type="text" id="validationCustom02" name="pass" placeholder="Ingrese el codigo" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor ingrese el codigo de verificación.
                </div>
            </div>

            <div>
                <label for="validationCustom03" class="form-label">Contraseña</label>
                <input type="password" id="validationCustom03" name="pass" placeholder="Ingrese su contraseña" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor ingrese su contraseña.
                </div>
            </div>
        }
        <button class="btn btn-dark" type="submit">Login</button>
    </form>
    <br /><br />
    <br /><br />
    <br /><br />
</div>

