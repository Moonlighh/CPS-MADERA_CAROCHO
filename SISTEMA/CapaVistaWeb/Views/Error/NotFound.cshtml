@{
    var urlReferrer = Request.UrlReferrer;
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f1f1f1;
    }

    .error-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .error-content {
        text-align: center;
    }

    .error-image {
        max-width: 400px;
        margin-bottom: 20px;
    }

    .error-title {
        font-size: 60px;
        color: #333;
        margin-top: 0;
    }

    .error-message {
        font-size: 24px;
        color: #555;
        margin-bottom: 20px;
    }

    .error-link {
        display: inline-block;
        padding: 10px 20px;
        background-color: #333;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        font-size: 18px;
    }
</style>

<div class="error-container">
    <div class="error-content">
        <img class="error-image" src="/Content/assets/img/error404.jpg" alt="Error 404">
        <h1 class="error-title">404</h1>
        <h2 class="error-message">¡Página no encontrada!</h2>
        <p class="error-message">Lo sentimos, pero la página que estás buscando no existe.</p>
        <h1>@urlReferrer</h1>
        @if (urlReferrer != null)
        {
            <button class="btn btn-group-lg" onclick="location.href='@urlReferrer'">
                <i class="bi bi-arrow-left"></i> Regresar
            </button>
        }
    </div>
</div>

