    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>LONGITUD</th>
                    <th>DIAMETRO</th>
                    <th>PRECIO</th>
                    <th>STOCK</th>
                </+
tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.IdProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Longitud)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Diametro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Stock)
                    </td>
                </tr>
                }
            </tbody>

        </table>
