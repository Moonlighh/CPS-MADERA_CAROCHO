@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <hr>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Tipo de madera</label>
        <div class="col-md-10">
            @Html.DropDownList("cTipoU", (SelectList)ViewBag.listaTipo, new { @class = "form-control", required = "required" })
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3 row" hidden>
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdProducto, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
            @Html.ValidationMessageFor(model => model.IdProducto, "", new { @class = "text-danger", @type = "hidden" })
        </div>
    </div>

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Longitud</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Longitud, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Longitud, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Diametro</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Diametro, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Diametro, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Precio de venta</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PrecioVenta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PrecioVenta, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <button type="button" class="btn btn-warning">
        @Html.ActionLink("Regresar", "ListarProductos")
    </button>

    <button type="submit" class="btn btn-info">
        Confirmar
    </button>
</div>
    <br>
    <br>
    <br>
    <br>
}
