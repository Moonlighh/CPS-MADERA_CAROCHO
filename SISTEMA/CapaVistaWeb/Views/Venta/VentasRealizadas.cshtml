<div class="container">
    <br><h2 style="text-align: center">MIS COMPRAS</h2>
    
    <!-- Ordenar -->
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-primary btn-lg" id="ASC" href="ListarProveedores?orden=asc"><i class="bi bi-sort-up"></i></a>
    <a onclick="return Ordenar(this)" aria-current="page" type="button" class="btn btn-secondary btn-lg" id="DESC" href="ListarProveedores?orden=desc"><i class="bi bi-sort-down"></i></a>
    <hr>
    <!-- Buscar -->
    <form class="d-flex mb-4" role="search" action="#" method="POST" id="Bproveedor">
        <input class="form-control me-2" type="search" placeholder="Buscar" name="dato" aria-label="Search">
        <button onclick="return Buscar('Bproveedor')" class="btn btn-outline-success" type="submit">Buscar</button>
    </form>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Total)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>Detalle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdVenta)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("DetalleVenta", new { idVenta = item.IdVenta })" role="button">
                            <i class="bi bi-pencil-square"></i> Detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
