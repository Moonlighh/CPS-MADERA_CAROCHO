            </div>
        </div>

        <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-2 col-form-label">DIAMETRO</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProveedorProducto.Producto.Diametro, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ProveedorProducto.Producto.Diametro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row" disable>
